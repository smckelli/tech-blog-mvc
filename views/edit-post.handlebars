<article class = "new-page">
  <section class = "edit-form-page">
    <div class = "form-heading">
      <h2>
        Edit Post
      </h2>
    </div>
    <div class = "form-section">
        <form class ="edit-post-form">
          <div class = "post-title-section">
            <label for="post-title">Post Title</label>
            <input name="post-title" type="text" id = "post-title" value="{{post.title}}" />
          </div>
          <div class="post-content">
              <label for="post-content">Your Thoughts</label>
              <textarea class="entry-field" id="post-content" name="post-content">{{post.content}}</textarea>
          </div>
        <button type="submit">Save post</button>
        <button type="button" class="delete-post-btn">Delete post</button>
      </form>
    </div>
  </section>
</article>


<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
